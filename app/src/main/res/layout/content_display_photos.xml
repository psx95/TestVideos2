<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.psx.androidcourseproject.Helper.DisplayPhotosActivity"
    android:background="@color/cardview_dark_background"
    tools:showIn="@layout/activity_display_photos">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="368dp"
        android:background="@color/cardview_dark_background"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/pic_raw_1"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pic1" />

        <ImageView
            android:id="@+id/pic_raw_2"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/pic2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:background="@color/cardview_dark_background"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/pic_raw_3"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pic3" />

        <ImageView
            android:id="@+id/pic_raw_4"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pic4" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal" android:layout_width="368dp"
        android:background="@color/cardview_dark_background"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/linearLayout3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/pic_raw_5"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pic5" />

        <ImageView
            android:id="@+id/pic_raw_6"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/pic2" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
