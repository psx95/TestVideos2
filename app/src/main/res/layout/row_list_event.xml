<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_grey_900">


    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:id="@+id/event_date_frame"
        android:background="@color/md_red_500"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAY"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/event_month"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/md_white_1000"
            android:layout_height="wrap_content"
            android:text="2017"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="78dp"
            android:id="@+id/event_year"/>

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="04"
            android:textColor="@color/md_white_1000"
            android:textSize="40dp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/event_details"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:background="@color/md_grey_700"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_title_name"
            android:text="WWE Starnight"
            android:textColor="@color/md_white_1000"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_location"
            android:text="Bologna, Italy, BO"
            android:textSize="18dp"
            android:textAlignment="gravity"
            android:layout_gravity="center"
            android:textColor="@color/md_grey_500"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_day_time"
            android:text="THU. - 07:00 PM GMT+02:00"
            android:textColor="@color/md_grey_500"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="30dp" />

    </FrameLayout>


</LinearLayout>